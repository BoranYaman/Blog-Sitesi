@using HifiBlog.Models
@model HifiBlog.Models.BlogViewModel

<div style="width: 60em; margin-left: 5%; height: 100%;">
    <h1 style="text-align: center; margin-top: 3%;">Bloglar</h1>
    @foreach (var blog in Model.Blogs)
    {
        <div style="border-radius: 15px; background-color: rgb(240, 242, 244); margin-left: auto; margin-right: auto; margin-top: 5%; width: 100%; height: 50%; border-color: rgb(255, 254, 254); border-style: solid;">
            <div style="position: static; margin-left: 4%; width: 25em; height: 15em;">
                <img style="width: 95%; height: 95%; border-radius: 20px; margin-top: 1.3%;" src="~/img/Blogimg/@blog.BlogImg" class="card-img-top" />
            </div>
            <div style="text-align: center; margin-top: -24.5%; position: static; float: right; width: 50%;">
                <h5 style="text-decoration: none; color: black;" class="card-title">
                    <a style="color: black; text-decoration: none;" asp-action="BlogDetails" asp-route-id="@blog.BlogId">@blog.BlogName</a>
                </h5>
            </div>
            @if (blog.BlogTag == "Hoparlörler")
            {
                <h6 style="width: 14%; border-radius: 10px; float: right; margin-right: 38%; margin-top: -20%; color: aliceblue; text-align: center; background-color: rebeccapurple;">@blog.BlogTag</h6>
            }
            else if (blog.BlogTag == "Kulaklıklar")
            {
                <h6 style="width: 14%; border-radius: 10px; float: right; margin-right: 38%; margin-top: -20%; color: aliceblue; text-align: center; background-color: chocolate;">@blog.BlogTag</h6>
            }
            else
            {
                <h6 style="width: 14%; border-radius: 10px; float: right; margin-right: 38%; margin-top: -20%; color: aliceblue; text-align: center; background-color: darkcyan;">@blog.BlogTag</h6>
            }
            <div style="text-align: right; margin-right: 1%; margin-top: -3.5%; position: static; float: right; width: 50%;">
                @if (blog.PublishedOn.HasValue)
                {
                    <p style="font-size: 18px;" class="card-text">@blog.PublishedOn.Value.ToString("MMMM dd, yyyy")</p>
                }
            </div>
        </div>
    }
</div>
<ul class="pagination">
    <li class="page-item"><a href="#" class="page-link">1</a></li>
    <li class="page-item"><a href="#" class="page-link">2</a></li>
    <li class="page-item"><a href="#" class="page-link">3</a></li>
</ul>
