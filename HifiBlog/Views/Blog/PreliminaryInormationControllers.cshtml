@model IEnumerable<PreliminaryInormation>
  
    <div style="width: 80em; margin-left: 5%; height: 100%;">
        <h1 style="text-align: center; margin-top: 3%;">Ön Yazı Yönetim Paneli</h1>
       
        @foreach (var PreIno in Model)
        {
            <div style="border-radius: 15px; background-color: rgb(240, 242, 244); margin: 5% auto; width: 100%;height: 20em; border-color: rgb(255, 254, 254); border-style: solid; ">
                
                <div style=" text-align: center; margin-top: 1%; float: left; width: 40%; margin-left: -5%;height:50%;">
                    <h3> Başlık</h3>
                    <h5 style="height: 80%; width: 70%;margin-left: 17%;" class="card-title">@PreIno.PITitle</h5>
                </div>
               
            <div style="border-radius: 10px; width: 10.3%;text-align: center; height:11%;float: right;margin-left: -5%;margin-left: 50%; margin-top: 5%;font-size: 18px;">
                <h5 style="margin-top: -40%; height: 150%;"> Aktiflik Durumu</h5> <br>
                 @if(@PreIno.IsActive=="True")
                 {
                     <p style="font-size: 20px; background-color: green;color: aliceblue;border-radius: 5px;margin-top: -18%;">@PreIno.IsActive</p>
                 }
                 else{
                     <p style="font-size: 20px; background-color: red;color:aliceblue;border-radius: 5px;margin-top: -18%;">@PreIno.IsActive</p>
                 }
                
             
             </div>
                <div style="clear: both; text-align: center; margin-top: 2%;float: right;margin-right: 0%;margin-top: -1.5%; height: 50%;">
                  <a asp-controller="Blog" asp-action="PreliminaryInormationEdit" asp-route-id="@PreIno.id" style="margin-top: 5%; width: 100%;" class="btn btn-primary">Güncelle</a> 
                  
                  <a  asp-action="PreliminaryInormationDelete" asp-route-id="@PreIno.id" style="margin-top: 10%; width: 100%;"  class="btn btn-danger">Sil</a> 
                </div>
            </div>
        }
    </div>

    