@model Blog

    
<div style="margin-top: 3%; border-radius: 15px; width: 55em;padding-top: 1%; height: 100%;margin-left: 10%;background-color: rgb(228, 230, 230);margin-left: auto;margin-right: auto;">
    <div style="text-align: center;width: 55em;margin-left: auto;margin-right: auto;">
        <h1 style="font-family: 'Merriweather', serif;
        ">@Model.BlogName</h1>
        @if(@Model.BlogTag=="Hoparlörler")
        {
            <h6 style="width: 14%;border-radius: 10px;margin-top: 3%; color: aliceblue;text-align: center; background-color: rebeccapurple;">@Model.BlogTag</h6>
    
        }
        else if(@Model.BlogTag=="Müzik Çalarlar")
        {
            <h6 style="width: 14%;border-radius: 10px;margin-top: 3%; color: aliceblue;text-align: center; background-color:darkcyan;">@Model.BlogTag</h6>

            
        }
        else{
            <h6 style="width: 14%;border-radius: 10px;margin-top: 3%; color: aliceblue;text-align: center; background-color:chocolate;">@Model.BlogTag</h6>

    
        }
    </div>
    <div style="width:  80%;height: 30%;margin-left: auto;margin-right: auto;">
    <img style="border-radius: 20px; width: 100%;height: 25em;"  src="~/img/Blogimg/@Model.BlogImg" alt="">
</div>
<div style="width: 90%;margin-left: auto;margin-right: auto;">
    <h1 style="margin-top: 5%; width: 100%; text-align: center;font-family: 'Merriweather', serif;
    ">Blog İçeriği</h1>
    <p style="font-family: 'Georgia', serif; margin-top: 5%; width: 80%;">  <p style="font-family: 'Merriweather', serif;
        ">@Html.Raw(Model.BlogText.Replace("\n", "<br/>"))</p></p>
</div>
<div style="font-family: 'Merriweather', serif;
width:  80%;height: 30%;margin-left: auto;margin-right: auto;">
    <h1 style="font-family: 'Merriweather', serif;
    margin-top: 5%; width: 100%; text-align: center;">Özellikler</h1>
    <div style="margin-left: -6%;">
    <h6 style="font-family: 'Merriweather', serif;
    margin-top: 3%;" >Kullanım Tipi: @Model.TypeOfUse</h6>
    <h6 style="margin-top: 3%;">Bağlantı Tipi: @Model.ConnectionType</h6>
    <h6 style="margin-top: 3%;">Jak Tipi: @Model.JakType</h6>
    <h6 style="margin-top: 3%;">Frekans aralığı : @Model.FrequencyRange</h6>
    <h6 style="margin-top: 3%;">dB: @Model.SoundLoudity</h6>
    <h6 style="margin-top: 3%;">Ağırlık : @Model.Weight</h6>
    <h6 style="margin-top: 3%;">Sürücü  Tipi: @Model.DriveType</h6>
    <h6 style="margin-top: 3%;">Aktif Gürültü Engelleme: @Model.ActiveNoiseCanceling</h6>
    <h6 style="margin-top: 3%;">Impedance: @Model.Impedance</h6>


</div>
</div>

</div>
     
