@model IEnumerable<Blog>
  
    <div style="width: 80em; margin-left: 5%; height: 100%;">
        <h1 style="text-align: center; margin-top: 3%;">Blog Yönetim Paneli</h1>
       
        @foreach (var blog in Model)
        {
            <div style="border-radius: 15px; background-color: rgb(240, 242, 244); margin: 5% auto; width: 100%;height: 20em; border-color: rgb(255, 254, 254); border-style: solid; ">
                <div style="margin-left: 3%; width: 20em; height: 17em; float: left;">
                    <img style="width: 100%; height: 100%;margin-top: 6%;" src="~/img/Blogimg/@blog.BlogImg" class="card-img-top">
                </div>
                <div style=" text-align: center; margin-top: 1%; float: right; width: 40%; margin-right: 15%;height:50%;">
                    <h3>Blog Başlığı</h3>
                    <h5 style="height: 80%; width: 70%;margin-left: 17%;" class="card-title">@blog.BlogName</h5>
                </div>
                <div style="position:absolute;width: 10%;height: 10%;margin-left: 24%;margin-top: 0.8%;">
                    @if(blog.BlogTag=="Hoparlörler")
                    {
                        <h5 style="margin-left: 13%;" >Blog Kategori</h5>
                        <h6 style="border-radius: 10px; color: aliceblue;text-align: center; background-color:blueviolet;">@blog.BlogTag</h6>
                
                    }
                    else if(blog.BlogTag=="Kulaklıklar")
                    {
                        <h5 style="margin-left: 13%;" >Blog Kategori</h5>
                        <h6 style="border-radius: 10px; color: aliceblue;text-align: center; background-color:chocolate;">@blog.BlogTag</h6>
                        
                    }
                    else{
                        <h5 style="margin-left: 13%;" >Blog Kategori</h5>
                        <h6 style="border-radius: 10px; color: aliceblue;text-align: center; background-color:darkgreen;">@blog.BlogTag</h6>
                
                    }
                </div>
                <div style=" text-align: center; margin-right: 1%; margin-top: 4em; float: right; width: 40%; margin-right: 15%;">
                    <h3>Yayın Tarihi</h3>
                    @if (blog.PublishedOn.HasValue)
                    {
                        <p style="font-size: 18px;" class="card-text">@blog.PublishedOn.Value.ToString("MMMM dd, yyyy")</p>
                    }
                </div>
                <div style="border-radius: 10px; width: 10.3%;text-align: center; height:11%;float: right;margin-left: -5%;margin-left: 50%; margin-top: -23%;font-size: 18px;">
               <h5 style="height: 150%;"> Aktiflik Durumu</h5>
                @if(@blog.IsActive=="true")
                {
                    <p style="font-size: 20px; background-color: green;color: aliceblue;border-radius: 5px;">@blog.IsActive</p>
                }
                else{
                    <p style="font-size: 20px; background-color: red;color:aliceblue;border-radius: 5px;">@blog.IsActive</p>
                }
               
            
            </div>
            <div style="border-radius: 10px; width: 10.3%;text-align: center; height:11%;float: right;margin-left: -5%;margin-left: 50%; margin-top: -15%;font-size: 18px;">
                <h5 style="height: 150%;"> Öne Çıkanlar</h5>
                 @if(@blog.HighlightsValue=="True")
                 {
                     <p style="font-size: 20px; background-color: green;color: aliceblue;border-radius: 5px;margin-top: -18%;">@blog.HighlightsValue</p>
                 }
                 else{
                     <p style="font-size: 20px; background-color: red;color:aliceblue;border-radius: 5px;margin-top: -18%;">@blog.HighlightsValue</p>
                 }
                
             
             </div>
                <div style="clear: both; text-align: center; margin-top: 2%;float: right;margin-right: 0%;margin-top: -6.5%; height: 50%;">
                  <a asp-controller="Blog" asp-action="BlogEdit" asp-route-id="@blog.BlogId" style="margin-top: 5%; width: 100%;" class="btn btn-primary">Güncelle</a> 
                  
                  <a  asp-action="BlogDelete" asp-route-id="@blog.BlogId" style="margin-top: 10%; width: 100%;"  class="btn btn-danger">Sil</a> 
                </div>
            </div>
        }
    </div>
    <ul style="margin-left: auto;margin-right: auto;width: 100%;" class="pagination">
        <li class="page-item"><a href="#" class="page-link">1</a></li>
        <li class="page-item"><a href="#" class="page-link">2</a></li>
        <li class="page-item"><a href="#" class="page-link">3</a></li>
    </ul>
    