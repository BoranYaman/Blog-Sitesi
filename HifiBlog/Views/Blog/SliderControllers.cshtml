@model IEnumerable<Slider>

<h3 style="margin-top: 2%;">Lütfen Resim boyutunu 1500/3000 olarak kullanın</h3>
    @foreach (var sli in Model)
    {
        <div style="border-radius: 15px; background-color: rgb(240, 242, 244); margin: 5% auto; width: 100%;height: 20em; border-color: rgb(255, 254, 254); border-style: solid;">
            <div style="margin-left: 3%; width: 35em; height: 17em; float: left;">
                <img style="width: 100%; height: 100%;margin-top: 6%;" src="~/img/Sliderimg/@sli.SliderImg" class="card-img-top">
            </div>
        </div>

       
            

            <div style="text-align: center; margin-top: -25em; float: right; width: 40%; margin-right: 20%; height: 30%; ">
                <h3 style="margin-top: 5%;">Slider Başlığı</h3>
                <h5 style="height: 80%; width: 70%; margin-left: 17%;" class="card-title">@sli.SliderName</h5>
            </div>

        <div style=" text-align: center; margin-right: 1%; margin-top: -17em; float: right; width: 40%; margin-right: 20%; ">
                    <h5>Yayın Tarihi</h5>
                    @if (sli.PublishedOn.HasValue)
                    {
                        <p style="font-size: 18px;" class="card-text">@sli.PublishedOn.Value.ToString("MMMM dd, yyyy")</p>
                    }
                </div>
        
          
            <div style="border-radius: 10px; width: 10.3%;text-align: center; height:11%;float: right;margin-right: 2%;margin-left: 50%; margin-top: -23%;font-size: 18px;">
                <h5 style="height: 150%;"> Aktiflik Durumu</h5>
                 @if(@sli.IsActive=="True")
                 {
                     <p style="font-size: 20px; background-color: green;color: aliceblue;border-radius: 5px;">@sli.IsActive</p>
                 }
                 else{
                     <p style="font-size: 20px; background-color: red;color:aliceblue;border-radius: 5px;">@sli.IsActive</p>
                 }
             </div>

            <div style="clear: both; text-align: center; margin-top: 2%;float: right;margin-right: 3%;margin-top: -15.5%; height: 50%;">
              <a asp-controller="Blog" asp-action="SliderEdit" asp-route-id="@sli.SliderId" style="margin-top: 5%; width: 100%;" class="btn btn-primary">Güncelle</a> 
              
              <a  asp-action="SliderDelete" asp-route-id="@sli.SliderId" style="margin-top: 10%; width: 100%;"  class="btn btn-danger">Sil</a> 
            </div>
            
    }
    