@model Slider
<style>
    .form-container {
        margin: 5% auto;
        padding: 2%;
        border: solid 1px rgb(156, 156, 39);
        background-color: rgb(241, 241, 241);
        width: 50em;
    }
    .form-control {
        margin-bottom: 1rem;
    }
    .form-label {
        margin-bottom: 0.5rem;
        font-weight: bold;
    }
</style>

<form style="width: 80em;" asp-controller="Blog" asp-action="SliderAdd" method="post" enctype="multipart/form-data" class="form-container">
    <div class="form-group">
        <label asp-for="SliderImg" class="form-label">Slider Resimleri</label>
        <input asp-for="SliderImg" type="file" name="SliderImg" id="sliderImgInput" oninput="updateModalTitle()" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SliderName" class="form-label">Slider Başlığı</label>
        <input asp-for="SliderName" class="form-control">
    </div>
    <div style="height: 70%;" class="mb-3">
        <label asp-for="SliderText" class="form-label"></label>
        <textarea asp-for="SliderText" class="form-control"></textarea>
        <span asp-validation-for="SliderText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublishedOn" class="form-label">Tarih</label>
        <input asp-for="PublishedOn" class="form-control" type="date">
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <select asp-for="IsActive" class="form-control">
            <option>True</option>
            <option>False</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Slider Ekle</button>
</form>
 
@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.1.1/tinymce.min.js" integrity="sha512-bAtLCmEwg+N9nr6iVELr/SlDxBlyoF0iVdPxAvcOCfUiyi6RcuS6Lzawi78iPbAfbNyIUftvwK9HPWd+3p975Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    tinymce.init({
        selector: '#SliderText'
    });
</script>
}
