@model  PreliminaryInormation
<div class="container">
    <form asp-controller="Blog" asp-action="PreliminaryInormationEdit" method="post" enctype="multipart/form-data" class="form-container">
        <input type="hidden" asp-for="id">
        <div style="margin-top: 3%;" class="form-group">
            <label asp-for="PITitle" class="form-label">Başlık</label>
            <input asp-for="PITitle" class="form-control">
        </div>
        <div style="height: 30%;margin-top: 3%;" class="mb-3">
            <label asp-for="Text" class="form-label">Yazı</label>
            <textarea style="height: 40em;" asp-for="Text" class="form-control"></textarea>
            <span style="height: 100%;" asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="control-label">Öne Çıkanlar</label>
            <select asp-for="IsActive" class="form-control">
                <option>True</option>
                <option>False</option>
                
            </select>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Ön Yazıyı  Güncelle</button>
        <br>
    </form>

    @section Scripts{
    
        <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.1.1/tinymce.min.js" integrity="sha512-bAtLCmEwg+N9nr6iVELr/SlDxBlyoF0iVdPxAvcOCfUiyi6RcuS6Lzawi78iPbAfbNyIUftvwK9HPWd+3p975Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script>
            tinymce.init({
                selector: '#Text'
            });
        
           
        
        </script>
    }